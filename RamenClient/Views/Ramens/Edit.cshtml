

<h1>Edit Ramen Info:</h1>
<form action="/Ramen/Details/@(Model.RamenId)" method="post">
  <label for="type">Ramen Type</label>
  <input id="type" name="type" type="text" value="@(Model.Type)">
  <label for="description">Ramen Description</label>
  <input id="description" name="description" type="text" value="@(Model.Description)">
  <label for="restaurant">Ramen Restaurant</label>
  <input id="restaurant" name="restaurant" type="text" value="@(Model.Restaurant)">
  <label for="location">Ramen Location</label>
  <input id="location" name="location" type="text" value="@(Model.Location)">
  <label for="rating">Ramen Rating</label>
  <input id="rating" name="rating" type="number" value="@(Model.Rating)">
  <label for="reivew">Ramen Review</label>
  <input id="review" name="review" type="text" value="@(Model.Review)">
  <button type="submit">Go!</button>
</form>

<a href="/Ramens/Details/@(Model.RamenId)"><p>Return to Details</p></a>
